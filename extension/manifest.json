{
  "manifest_version": 3,
  "name": "Fiverr Job Scraper",
  "version": "1.0",
  "description": "Automatically extract Fiverr buyer requests and send to your dashboard",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.fiverr.com/*",
    "http://13.48.70.12:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.fiverr.com/buyer_requests*"],
      "js": ["scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
